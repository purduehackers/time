{
  "name": "@purduehackers/time",
  "version": "0.0.4",
  "description": "convert between traditional time and lightning time ⚡️",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "tsnode": "node --loader ts-node/esm --no-warnings src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/purduehackers/time.git"
  },
  "keywords": [
    "time"
  ],
  "author": "MatthewStanciu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/purduehackers/time/issues"
  },
  "homepage": "https://github.com/purduehackers/time",
  "dependencies": {
    "rgb-hex": "3.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
